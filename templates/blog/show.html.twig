{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2>{{article.title}}</h2>
        <div class="metadata">{{article.createdAt | date('d/m/Y H:i')}}</div>
        <div class="content">
            <img src="{{article.image}}" alt="">
            {{article.content | raw}}
        </div>
    </article>
{% endblock %}